{
  "name": "lochmueller/niu-api-connector",
  "autoload": {
    "psr-4": {
      "Lochmueller\\NiuApiConnector\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Tim Lochm√ºller"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.4",
    "symfony/console": "^7.2",
    "symfony/dotenv": "^7.2"
  },
  "require-dev": {
    "humbug/box": "^4.6",
    "friendsofphp/php-cs-fixer": "^3.7"
  },
  "scripts": {
    "niu:build": [
      "box compile"
    ],
    "code-fix": [
      "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix"
    ]
  },
  "config": {
    "platform": {
      "php": "8.2.22"
    },
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  }
}
